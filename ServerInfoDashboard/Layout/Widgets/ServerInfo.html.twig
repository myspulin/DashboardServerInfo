<style type="text/css">
    .main {
        font-size: 8px !important;
    }

    .main th{
        min-width: 170px;
    }
</style>

<div id="serverInfoWidget" class="panel panel-default">
    <div class="panel-heading">
        <h2 class="panel-title">{{ 'lbl.DashboardServerInfoTitle'|trans|ucfirst }}</h2>
    </div>
    <div class="panel-body">
      <table class="main table table-striped">
          <tbody>
              <tr>
                  <th>{{ 'lbl.DashboardServerInfo'|trans|ucfirst }}:</th>
                  <td>{{ hostingData.uname }}</td>
              </tr>
              <tr>
                  <th>{{ 'lbl.DashboardServerSoftwareVersion'|trans|ucfirst }}:</th>
                  <td>{{ hostingData.version.server }}</td>
              </tr>
              <tr>
                  <th>{{ 'lbl.DashboardPhpVersion'|trans|ucfirst }}:</th>
                  <td>{{ hostingData.version.php }}</td>
              </tr>
              <tr>
                  <th>{{ 'lbl.DashboardMemoryLimit'|trans|ucfirst }}:</th>
                  <td>{{ hostingData.php.memory_limit }}</td>
              </tr>
              <tr>
                  <th>{{ 'lbl.DashboardMaxExecutionTime'|trans|ucfirst }}:</th>
                  <td>{{ hostingData.php.max_execution_time }}</td>
              </tr>
              <tr>
                  <th>{{ 'lbl.DashboardUploadMaxFileSize'|trans|ucfirst }}:</th>
                  <td>{{ hostingData.php.upload_max_filesize }}</td>
              </tr>
          </tbody>
      </table>
    </div>

    <div class="panel-body">
        <table class="main table table-striped">
            <tbody>
                <tr>
                    <th>{{ 'lbl.DashboardDatabaseVersion'|trans|ucfirst }}:</th>
                    <td>{{ hostingData.database.version }}</td>
                </tr>
                <tr>
                    <th>{{ 'lbl.DashboardDatabaseName'|trans|ucfirst }}:</th>
                    <td>{{ hostingData.database.name }}</td>
                </tr>
                <tr>
                    <th>{{ 'lbl.DashboardDatabaseHost'|trans|ucfirst }}:</th>
                    <td>{{ hostingData.database.host }}</td>
                </tr>
                <tr>
                    <th>{{ 'lbl.DashboardDatabaseUser'|trans|ucfirst }}:</th>
                    <td>{{ hostingData.database.user }}</td>
                </tr>
                <tr>
                    <th>{{ 'lbl.DashboardDatabaseDriver'|trans|ucfirst }}:</th>
                    <td>{{ hostingData.database.driver }}</td>
                </tr>
            </tbody>
        </table>
    </div>

</div>